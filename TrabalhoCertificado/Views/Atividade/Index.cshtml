@model Atividade;
<button type="button" name="novaatividade" class="btn btn-outline-success btn-lg btn-block" data-toggle="modal" data-target="#modalAtividade">Cadastrar nova atividade</button>
<table id="table" class="table table-hover table-mc-light-blue">
    <thead>
        <tr>
            <th class="p-1 mb-2 bg-info text-white"><label asp-for="ID"></label></th>
            <th class="p-2 mb-2 bg-secondary text-white"><label asp-for="nome"></label></th>
            <th class="p-2 mb-2 bg-primary text-white">Status</th>
            <th class="p-2 mb-2 bg-warning text-dark"><label> Editar</label></th>            
            <th class="p-2 mb-2 bg-danger text-white">Remover</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td data-title="ID">1</td>
            <td data-title="Name">Atividade 1</td>
            <td data-title="Link">
                Completo
            </td>
            <td>Editar</td>
            <td>Remover</td>
        </tr>
        <tr>
            <td data-title="ID">2</td>
            <td data-title="Name">Atividade 2</td>
            <td data-title="Link">
                Completo
            </td>
            <td>Editar</td>
            <td>Remover</td>
        </tr>
        <tr>
            <td data-title="ID">3</td>
            <td data-title="Name">Atividade 3</td>
            <td data-title="Link">
                Completo
            </td>
            <td>Editar</td>
            <td>Remover</td>
        </tr>
    </tbody>
</table>

<div class="modal fade" id="modalAtividade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label asp-for="nome"></label>
                        <input type="text" class="form-control" asp-for="nome" placeholder="Nome da atividade">
                        <span asp-validation-for="nome" class="text-sm-center"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="descricao"></label>
                        <input asp-for="descricao" class="form-control" id="exampleInputPassword1" placeholder="Descrição da atividade">
                    </div>
                    <div class="form-group">
                        <label asp-for="dataInicio"></label>
                        <input asp-for="dataInicio" class="form-control" id="exampleInputPassword1" placeholder="Data de inicio da atividade">
                    </div>
                    <div class="form-group">
                        <label asp-for="dataFim"></label>
                        <input asp-for="dataFim" class="form-control" id="exampleInputPassword1" placeholder="Data de inicio da atividade">
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

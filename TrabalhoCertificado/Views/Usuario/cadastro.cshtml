@{
    Layout = "LayoutUsuario";
}
@model Usuario;

    @if (ViewBag.Confirmacao != null)
    {
        <span class="login100-form-title p-b-34 p-t-27">
            Sucesso!
        </span>
        <span class="alert alert-success text-center">@ViewBag.Confirmacao</span>
    }
    else
    {
        <span class="login100-form-title p-b-34 p-t-27">
            Cadastro
        </span>

        <div class="wrap-input100 validate-input" data-validate="Digite seu Nome">
            <input class="input100" type="text" asp-for="nome" placeholder="Nome Completo">
            <span class="focus-input100" data-placeholder="&#xf207;"></span>
        </div>
        <span asp-validation-for="nome" class="text-danger mb-2"></span>

        <div class="wrap-input100 validate-input" data-validate="Digite seu Email">
            <input class="input100" type="text" asp-for="Email" placeholder="Email">
            <span class="focus-input100" data-placeholder="&#xf207;"></span>
        </div>
        <span asp-validation-for="Email" class="text-danger mb-2"></span>

        <div class="wrap-input100 validate-input" data-validate="Digite sua Senha">
            <input class="input100" type="password" asp-for="Senha" placeholder="Senha">
            <span class="focus-input100" data-placeholder="&#xf191;"></span>

        </div>
        <span asp-validation-for="Senha" class="text-danger mb-2"></span>

        <div class="wrap-input100 validate-input" data-validate="Confirme sua Senha">
            <input class="input100" type="password" asp-for="SenhaConfirmar" placeholder="Confirmar Senha">
            <span class="focus-input100" data-placeholder="&#xf191;"></span>
        </div>
        <span asp-validation-for="SenhaConfirmar" class="text-danger mb-2"></span>

        @if (ViewBag.Erro != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Erro</div>
        }

        <div class="container-login100-form-btn">
            <button class="login100-form-btn">
                Cadastrar
            </button>
        </div>
    }



    <div class="text-center p-t-90">
        <a class="txt1" asp-action="index">
            Voltar para login
        </a>
    </div>
